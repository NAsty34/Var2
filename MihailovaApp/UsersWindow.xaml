<Window x:Class="MihailovaApp.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MihailovaApp"
        mc:Ignorable="d"
        Title="UsersWindow" Height="450" Width="800" MinHeight="450" MinWidth="800" Icon="ImageApp/icon.ico">
    <Viewbox>
    <Grid Height="450" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="305*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Image Source="ImageApp/logo.png"/>
            <TextBlock x:Name="header" TextWrapping="Wrap" Style="{StaticResource Header}"/>
            <Button Style="{StaticResource Login}" Content="Выйти" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
    </Viewbox>
</Window>
